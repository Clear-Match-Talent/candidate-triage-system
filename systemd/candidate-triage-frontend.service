[Unit]
Description=Candidate Triage System - Frontend (Next.js)
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/clawd/candidate-triage-system/frontend
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
Environment="NODE_ENV=development"
ExecStart=/usr/bin/npm run dev
Restart=always
RestartSec=5
StandardOutput=append:/var/log/candidate-triage-frontend.log
StandardError=append:/var/log/candidate-triage-frontend.log

[Install]
WantedBy=multi-user.target
